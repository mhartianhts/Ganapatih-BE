# Test Environment Configuration
# Copy file ini ke .env.test dan sesuaikan dengan konfigurasi Anda

NODE_ENV=test
PORT=6543

# Database Configuration (gunakan database terpisah untuk testing)
# PENTING: Jangan gunakan database production untuk testing!
DB_HOST=localhost
DB_PORT=5433
DB_NAME=testing
DB_USER=postgres
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=test_jwt_secret_key_for_testing
JWT_REFRESH_SECRET=test_jwt_refresh_secret_key_for_testing
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=*

